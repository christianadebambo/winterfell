{{> header }}
{{> navbar_logged_in }}

<div class="container dashboard text-center">
  <h1 class="my-5 display-4 fw-bold">Welcome, {{user.name}}!</h1>

  <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">

    <!-- Participate Card -->
    <div class="col mb-4">
      <div class="card h-100 border-0 shadow">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title fs-3">Participate in Events</h5>
          <p class="card-text">Join upcoming events and connect with fellow alumni.</p>
          <a href="/participate" class="btn btn-lg btn-primary mt-3">Participate</a>
        </div>
      </div>
    </div>

    <!-- Organize Card -->
    <div class="col mb-4">
      <div class="card h-100 border-0 shadow">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title fs-3">Organize Events</h5>
          <p class="card-text">Plan and host events for the alumni community.</p>
          <a href="/organize" class="btn btn-lg btn-primary mt-3">Organize</a>
        </div>
      </div>
    </div>

    <!-- My Events Card -->
    <div class="col mb-4">
      <div class="card h-100 border-0 shadow">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title fs-3">My Events</h5>
          <p class="card-text">Manage events you're participating in or organizing.</p>
          <a href="/myevents" class="btn btn-lg btn-primary mt-3">My Events</a>
        </div>
      </div>
    </div>

    <!-- My Profile Card -->
    <div class="col mb-4">
      <div class="card h-100 border-0 shadow">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title fs-3">My Profile</h5>
          <p class="card-text">Update your personal details and preferences.</p>
          <a href="/profile" class="btn btn-lg btn-primary mt-3">My Profile</a>
        </div>
      </div>
    </div>

  </div>
</div>

{{> footer_logged_in }}
